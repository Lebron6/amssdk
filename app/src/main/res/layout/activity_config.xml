<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="MQTT 服务器地址："
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_mqtt_server_uri"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:text="tcp://192.168.2.55:1883"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="MQTT 用户名："
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_mqtt_username"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:text="admin"

            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="MQTT 密码："
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_mqtt_password"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:text="Admin123"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="MQTT 设备编号："
            android:textSize="10sp" />

        <EditText
            android:id="@+id/et_mqtt_sn"
            android:layout_width="0dp"
            android:textSize="10sp"
            android:text="1581F6GKB23AL0040012"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <Button
            android:id="@+id/btn_dock_open"
            android:text="开门"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_dock_close"
            android:text="关门"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_dock_in"
            android:text="入库"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_dock_shut"
            android:text="入库关机"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_push_flight_state"
        android:text="推送飞机遥测数据"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
    <Button
        android:id="@+id/btn_connect"
        android:text="连接"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
</LinearLayout>